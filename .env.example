# Server
PORT=3000

# MongoDB (replace <user>,<password>,<cluster>,<dbname> in your local .env)
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# API keys (get these from provider dashboards)
OPENWEATHERMAP_KEY=your_openweathermap_api_key_here
EXCHANGERATE_KEY=your_exchangerate_api_key_here

# Auth
API_KEY=your_app_x_api_key_here
AUTH0_DOMAIN=your-auth0-domain
AUTH0_AUDIENCE=your-auth0-audience
